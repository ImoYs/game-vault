generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())
  comments  Comment[] // เชื่อมโยงกับคอมเมนต์ที่ผู้ใช้โพสต์
}

model Game {
  id          String    @id @default(uuid())
  title       String
  description String
  createdAt   DateTime  @default(now())
  comments    Comment[] // เชื่อมโยงกับคอมเมนต์ของเกมนี้
}

model Comment {
  id        String   @id @default(uuid()) // รหัสคอมเมนต์
  content   String   // ข้อความคอมเมนต์
  createdAt DateTime @default(now()) // เวลาที่โพสต์คอมเมนต์
  userId    String   // รหัสผู้ใช้ที่โพสต์คอมเมนต์
  gameId    String   // รหัสเกมที่เกี่ยวข้องกับคอมเมนต์

  user      User     @relation(fields: [userId], references: [id]) // เชื่อมโยงกับผู้ใช้
  game      Game     @relation(fields: [gameId], references: [id]) // เชื่อมโยงกับเกม

  @@index([gameId]) // สร้างดัชนีสำหรับการค้นหาคอมเมนต์ตามเกม
}

